{
  "name": "shell-bistro",
  "version": "1.0.0",
  "description": "CLI toolkit of useful shell command recipes written in JavaScript.",
  "main": "dist/index.js",
  "bin": "bin/shell-bistro",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "watch:build": "tsc -p tsconfig.json -w",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Luis Toubes <toubes@gmail.com>",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "typescript",
    "cli",
    "commands"
  ],
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "7.9.0",
    "@typescript-eslint/parser": "7.9.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.5.0",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.7",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "commander": "12.1.0",
    "ora": "8.0.1"
  }
}
